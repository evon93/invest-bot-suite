# Runtime configuration for invest-bot-suite
# Copy to .env and fill in values for your environment
# NOTE: DO NOT commit .env with real credentials

# Clock mode: simulated | real
INVESTBOT_MODE_CLOCK=simulated

# Exchange adapter: paper | stub | ccxt_sandbox
INVESTBOT_EXCHANGE_KIND=paper

# API credentials (required for non-paper exchanges)
# Leave empty for paper/stub modes
INVESTBOT_API_KEY=
INVESTBOT_API_SECRET=

# Base URL for exchange API (required for ccxt_sandbox/ccxt_live)
INVESTBOT_BASE_URL=

# Dry run mode: 1=enabled (default), 0=disabled
# When enabled, orders are logged but not sent to exchange
INVESTBOT_DRY_RUN=1
