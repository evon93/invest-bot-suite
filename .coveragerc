# .coveragerc
# Coverage configuration for invest-bot-suite
# Created in AG-H4-3-1

[run]
# Source directories to measure
source = engine,tools

# Omit CLI scripts and demos that are not imported during tests
# These are standalone entry points with if __name__ == "__main__"
omit = 
    # CLI run scripts (entry points)
    tools/run_*.py
    tools/smoke_*.py
    tools/*_demo.py
    
    # Utility CLI scripts with 0% coverage
    tools/build_dashboard.py
    tools/update_project_map.py
    tools/cleanup_report.py
    tools/freeze_topk_2H.py
    tools/render_risk_rules_prod.py
    tools/check_repo.py
    tools/check_determinism_3E.py
    tools/generate_sample_jsonl_3D4.py
    tools/apply_calibration_topk.py
    tools/build_best_params_2C.py
    tools/best_params_schema_2C.py
    tools/report_artifact_policy.py
    tools/list_skips.sh
    tools/bridge_headers.sh

[report]
# Exclude lines from coverage
exclude_lines =
    # Standard pragmas
    pragma: no cover
    
    # Debug/defensive code
    raise NotImplementedError
    raise AssertionError
    
    # Type checking blocks
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Main entry points (CLI)
    if __name__ == .__main__.:

# Show missing lines in report
show_missing = True

# Precision for coverage percentages
precision = 1
